@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">

    <h1 class="display-4">Hello World!</h1>
    <p id="description">Check my favourite song! (hover me)</p>
    <iframe width="560" height="315" src="https://www.youtube.com/embed/KfAnlzmMqMM?si=t2rdpXnq_fl13-Ug" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe
</div>
<script>
    const description = document.getElementById("description") 

    const widely = () => {
        description.style.letterSpacing = "1em"
    }
    const narrowly = () => {
        description.style.letterSpacing = "normal"
    }

    description.addEventListener("mouseover", widely)
    description.addEventListener("mouseout", narrowly)
</script>